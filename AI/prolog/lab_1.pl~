кошка(челси).
кошка(багира).
кошка(соня).
собака(рекс).
собака(найда).
собака(шарик).
коричневое(челси).
черное(багира).
рыжое(соня).
черное(рекс).
рыжое(найда).
белое(шарик).
животное(X):-
    кошка(X);
    собака(X).
родословная(X):-
    животное(X),
    хозяин(иван,X).
родословная(X):-
    животное(X),
    хозяин(анна,X).
хозяин(иван,X):-
    животное(X),
    черное(X).
хозяин(иван,X):-
    животное(X),
    коричневое(X).
хозяин(анна,X):-
    кошка(X),
    not(белое(X)),
    not(хозяин(иван,X)).
хозяин(петр,найда):-
    not(хозяин(анна,рекс)),
    not(родословная(шарик)).
